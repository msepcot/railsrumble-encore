<% review.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>

<%= form_for review do |f| %>

    <%= f.label :title %><br />
    <%= f.text_field :title %><br />

  <%= fields_for band do |b| %>
    <%= b.label :name, 'Band' %><br />
    <%= b.text_field :name %><br />
  <% end %>

  <%= f.label :venue %><br />
  <%= f.text_field :venue %><br />

  <%= f.label :played_at, 'Day of the Concert' %><br />
  <%= f.date_field :played_at %><br />

  <%= f.label :content %><br />
  <%= f.text_area :content %><br />

  <%= f.label :rating %><br />
  <%= f.select :rating, 1..5, include_blank: true %><br />

  <%= f.label :user_id %><br />
  <%= f.select :user_id, User.all.map {|u| [u.screen_name, u.id] }, include_blank: true %><br /><br />

  <%= f.fields_for :ticket do |t| %>
    <fieldset>
      <legend>Ticket Stub</legend>

      <table>
        <tr>
          <td><%= image_tag review.ticket.stub.url(:thumb) %></td>
          <td>&nbsp;</td>
          <td><%= t.label :stub, 'Change Stub' %><br />
              <%= t.file_field :stub %>
          </td>
        </tr>
      </table>

      <table>
        <tr>
          <td><%= t.label :event_code %><br />
              <%= t.text_field :event_code %>
          </td>
          <td>&nbsp;</td>
          <td><%= t.label :section %><br />
              <%= t.text_field :section %>
          </td>
        </tr>
        <tr>
          <td><%= t.label :row %><br />
              <%= t.text_field :row %>
          </td>
          <td>&nbsp;</td>
          <td><%= t.label :seat %><br />
              <%= t.text_field :seat %>
          </td>
        </tr>
      </table>
    </fieldset><br />
  <% end %>


  <%= f.submit %>
<% end %>
