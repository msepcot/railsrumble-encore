<div class="review">

  <%= link_to_unless_current image_tag(review.band.avatar.url(:thumb)), review.band %><br />
  <span class="stars" data-number="<%= review.rating %>"><%= review.rating %> Stars</span>

  <h1><%= link_to truncate(review.title, length: 50, separator: ' '), review %></h1>

</div>
